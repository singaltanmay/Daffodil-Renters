<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.browse.BrowseActivity">

    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asfmogin0" />

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/asfmogin0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/browse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorSecondaryDark"
                android:foregroundGravity="right"
                android:gravity="fill_horizontal"
                app:titleTextAppearance="?attr/textAppearanceBody1" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/browse_filter_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="16dp"
            android:background="@color/colorSecondary"
            android:src="@drawable/ic_add_black_24dp"
            android:text="@string/filter_fab_title"
            app:fabSize="normal"
            app:icon="@drawable/ic_filter_list_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>